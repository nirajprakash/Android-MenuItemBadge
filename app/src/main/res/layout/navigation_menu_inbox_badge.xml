    android:paddingBottom="4dp"
    android:background="?attr/colorAccent"
    android:text="0 new"
    android:textColor="@color/white"
    tools:visibility="visible"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
</LinearLayout>